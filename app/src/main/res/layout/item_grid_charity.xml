<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_margin="@dimen/dimen_super_mini"
              android:elevation="2dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/ivCharity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_charity_height"
        android:padding="@dimen/dimen_mini"/>

    <TextView
        android:id="@+id/tvCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_large"
        android:textAlignment="center"/>

</LinearLayout>